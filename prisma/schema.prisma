generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id          String      @id @default(uuid())
  name        String   @unique
  description String
  // Date log
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  // Relationships
  Series Serie[]

  @@map("category")
}

model Serie {
  id          String      @id @default(uuid())
  name        String      @unique
  description String
  imageUrl    String?
  yearLaunch  DateTime
  // Date log
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  // Relationships
  categories Category[]
  comunities   Community[]
  @@map("serie")
}

model Community {
  id                  String                @id @default(uuid())
  name                String    @unique
  description         String
  imageUrl            String?
  idSerie             String
  serie     Serie       @relation(fields: [idSerie], references: [id])
  // Date log
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt
  // Relationships
  enthusiasts Enthusiast[]
  @@map("community")
}

model Enthusiast {
  id                  String                @id @default(uuid())
  name                String 
  email               String                @unique
  password            String
  imageUrl            String?
  // Date log
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  // Relationships
  community Community[]
  @@map("enthusiast")
}
